unit Add_NAKL;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, Vcl.ComCtrls;

type
  TfmAddNakladnaya = class(TForm)
    Panel2: TPanel;
    buOk: TButton;
    buCancel: TButton;
    Panel1: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    edNaimenSiria: TEdit;
    edKolvo: TEdit;
    edSumma: TEdit;
    dtData: TDateTimePicker;
    procedure buOkClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  fmAddNakladnaya: TfmAddNakladnaya;

implementation

{$R *.dfm}

uses DM;

procedure TfmAddNakladnaya.buOkClick(Sender: TObject);
begin
with fmDM do
  begin
    //Включаем набор данных в режим добавления записи
    dstNakladnaya.Insert;
    //Заносим введенные значения в набор данных dstNakladnaya
    dstNakladnaya.FBN('DATA').AsDateTime := dtData;
    dstNakladnaya.FBN('SORT').AsString := edSort.Text;
    dstNakladnaya.FBN('EDIZMER').AsString := cbEdIzmer.Text;
    dstNakladnaya.FBN('CENA').AsInteger := StrToInt(edCena.Text);
    dstNakladnaya.FBN('NOMERNAKL').AsInteger := StrToInt(edNomNakl.Text);
  end;
end;

end.
